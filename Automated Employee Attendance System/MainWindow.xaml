<Window x:Class="Automated_Employee_Attendance_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Automated_Employee_Attendance_System"
        mc:Ignorable="d"
        FontFamily="Microsoft Sans Serif"
        SnapsToDevicePixels="True"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>



            <StackPanel Grid.Row="0">
                <Image Source="/UI/Logo.png" Width="200" Margin="75,20,75,20"/>
            </StackPanel>

            <StackPanel Grid.Row="1">

                <RadioButton Height="44" Width="260"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/UI/Dashbord.png" Width="24"/>
                        <TextBlock VerticalAlignment="Center"
                       Text="Dashboard"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="8,0,0,0"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Click="EmployeeWindow_Click"
                 Height="44" Width="260"
                 IsChecked="True"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/UI/EmployeeS.png" Width="24"/>
                        <TextBlock VerticalAlignment="Center"
                       Text="Employee"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="8,0,0,0"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Height="44" Width="260"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/UI/Attendance.png" Width="24"/>
                        <TextBlock VerticalAlignment="Center"
                       Text="Attendance"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="8,0,0,0"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Height="44" Width="260"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/UI/Report.png" Width="24"/>
                        <TextBlock VerticalAlignment="Center"
                       Text="Reports"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="8,0,0,0"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Height="44" Width="260"
                 Style="{StaticResource SelectableRadioButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/UI/Settings.png" Width="24"/>
                        <TextBlock VerticalAlignment="Center"
                       Text="Settings"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="8,0,0,0"/>
                    </StackPanel>
                </RadioButton>

            </StackPanel>


            <StackPanel Height="100"  VerticalAlignment="Bottom" Grid.Row="2">
                <Line X1="0" Y1="0" X2="350" Y2="0" Stroke="Gray" StrokeThickness="1" />
                <TextBlock Text="Arduino Conected" FontSize="18" TextAlignment="Center" FontWeight="SemiBold" Margin="6" Foreground="Green"/>
                <TextBlock Text="Version 1.0.0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,6,0,0" FontSize="12" Foreground="Gray"/>
                <TextBlock Text="© 2024 Automated Employee Attendance System" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
            </StackPanel>

        </Grid>

        <Grid Background="#FFECECEC" Grid.Column="1">
            <Border CornerRadius="20">
                <ContentControl  Margin="20" x:Name="MainContent"   Background="Transparent"  />
            </Border>
        </Grid>
        <!-- Main content area -->




        </Grid>
</Window>
