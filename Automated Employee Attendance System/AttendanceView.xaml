<UserControl x:Class="Automated_Employee_Attendance_System.AttendanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Automated_Employee_Attendance_System"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <Style x:Key="BigCalendarStyle" TargetType="Calendar">
            <!-- Calendar popup size -->
            <Setter Property="CalendarDayButtonStyle">
                <Setter.Value>
                    <Style TargetType="CalendarDayButton">
                        <Setter Property="FontSize" Value="14"/>

                        <!-- calender resize -->
                        <Setter Property="Width" Value="33"/>
                        <Setter Property="Height" Value="23"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        

    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Border Background="{DynamicResource ContBackground}">
                    <TextBlock Text="Dashboard Overview"
                               Foreground="{DynamicResource Forground}"
                       FontSize="22"
                       FontWeight="SemiBold"/>
                </Border>
                <TextBlock Text="   |   Today"
                       VerticalAlignment="Center"
                       Foreground="Gray"/>
            </StackPanel>

            <!-- Cards -->
            <UniformGrid Columns="4" Margin="0,0,0,20">

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
                    CornerRadius="12"
                    Padding="16"
                    Margin="6">
                    <StackPanel>
                        <TextBlock Text="Total Employees" Foreground="Gray"/>
                        <TextBlock Text="142" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
    CornerRadius="12"
    Padding="16"
    Margin="6">
                    <StackPanel>
                        <TextBlock Text="Present Today" Foreground="Gray"/>
                        <TextBlock Text="120" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
    CornerRadius="12"
    Padding="16"
    Margin="6">
                    <StackPanel>
                        <TextBlock Text="Absent Today" Foreground="Gray"/>
                        <TextBlock Text="12" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource Background}"
    CornerRadius="12"
    Padding="16"
    Margin="6">
                    <StackPanel>
                        <TextBlock Text="Late Arrivals" Foreground="Gray"/>
                        <TextBlock Text="10" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Forground}"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
            <Border Background="{DynamicResource Background}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                    Margin="0,0,0,20"
                    CornerRadius="12">
                <Grid Margin="0,20,0,10">
                    


                    <!-- Select Date -->
                    <StackPanel Grid.Column="0" Margin="10,0,15,0">
                        <TextBlock Text="Select Date"
                   Foreground="{DynamicResource Forground}"
                   FontSize="12"
                                   HorizontalAlignment="Left"
                   Margin="0,0,0,8"/>
                        <DatePicker Width="280"
                                    Height="32"
                                    CalendarStyle="{StaticResource BigCalendarStyle}"
                                    PreviewKeyDown="DatePicker_PreviewKeyDown"
                                    Focusable="False"
                        HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Filter Department -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Filter Department"
                   Foreground="{DynamicResource Forground}"
                                   HorizontalAlignment="Center"
                   FontSize="12"
                   Margin="114,0,0,8"/>
                        <ComboBox Width="280"
                                  Height="20"
                                  HorizontalAlignment="Center" Margin="300,0,0,0">
                            <ComboBoxItem Content="All Departments"/>
                            <ComboBoxItem Content="Engineering"/>
                            <ComboBoxItem Content="HR"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

            </Border>
        </StackPanel>
    </ScrollViewer>

</UserControl>
