<UserControl x:Class="Automated_Employee_Attendance_System.SettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Automated_Employee_Attendance_System"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>

        <StackPanel Margin="30">
            <TextBlock Foreground="Black" Text="System Settings" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left" 
                        FontSize="25" 
                        FontWeight="Regular"/>

            <TextBlock TextWrapping="WrapWithOverflow" Text="Manage application preferences,hardware connections,and global system configurations." FontSize="12" Foreground="Gray" />

        </StackPanel>

        <Border Margin="20" CornerRadius="12"
        BorderBrush="#E0E0E0"
        BorderThickness="1"
        Padding="20"
        Background="White">

            <StackPanel>

                <!-- Header -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Appearance"
                       FontSize="16"
                       FontWeight="SemiBold"/>
                    <TextBlock Text="Customize how the admin portal looks on your device."
                       FontSize="12"
                       Foreground="Gray"/>
                </StackPanel>

                <!-- Options -->
                <UniformGrid Columns="3" HorizontalAlignment="Left">

                    <!-- Light Mode -->
                    <RadioButton x:Name="LightRadio" Checked="LightRadio_Checked" GroupName="Theme"
                        
                         Style="{StaticResource ThemeRadioButtonStyle}">
                        <StackPanel>
                            <Border Width="48" Height="48"
                            CornerRadius="24"
                            Background="#F2F2F2"
                            HorizontalAlignment="Left">
                                <TextBlock Text="☀"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Text="Light Mode"
                               Margin="0,10,0,2"
                               FontWeight="SemiBold"/>
                            <TextBlock Text="High contrast, bright interface ideal for daylight."
                               FontSize="11"
                               Foreground="Gray"
                               TextWrapping="Wrap"
                               Width="180"/>
                        </StackPanel>
                    </RadioButton>

                    <!-- Dark Mode -->
                    <RadioButton x:Name="DarkRadio" Checked="DarkRadio_Checked" GroupName="Theme"
                         Style="{StaticResource ThemeRadioButtonStyle}">
                        <StackPanel>
                            <Border Width="48" Height="48"
                            CornerRadius="24"
                            Background="#1E1E1E">
                                <TextBlock Text="🌙"
                                   FontSize="18"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Text="Dark Mode"
                               Margin="0,10,0,2"
                               FontWeight="SemiBold"/>
                            <TextBlock Text="Easier on the eyes in low-light environments."
                               FontSize="11"
                               Foreground="Gray"
                               TextWrapping="Wrap"
                               Width="180"/>
                        </StackPanel>
                    </RadioButton>

                    <!-- Default -->
                    <RadioButton x:Name="SystemRadio" Checked="SystemRadio_Checked" GroupName="Theme"
                         Style="{StaticResource ThemeRadioButtonStyle}">
                        <StackPanel>
                            <Border Width="48" Height="48"
                            CornerRadius="24"
                            Background="#EAEAEA">
                                <TextBlock Text="💻"
                                   FontSize="18"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Text="Default"
                               Margin="0,10,0,2"
                               FontWeight="SemiBold"/>
                            <TextBlock Text="Sync with your operating system preferences."
                               FontSize="11"
                               Foreground="Gray"
                               TextWrapping="Wrap"
                               Width="180"/>
                        </StackPanel>
                    </RadioButton>

                </UniformGrid>

            </StackPanel>
        </Border>

    </StackPanel>
</UserControl>
